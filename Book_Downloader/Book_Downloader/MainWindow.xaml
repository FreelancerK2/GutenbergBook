<Window x:Class="Book_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Downloader"
        mc:Ignorable="d"
        Title="Book Downloader" Height="500" Width="850"
        Background="#F3F4F6">

    <Grid Margin="10">
        <!-- Column Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Book List -->
            <ColumnDefinition Width="*"/>
            <!-- Book Details -->
        </Grid.ColumnDefinitions>

        <!-- 📚 Book List Section -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Available Books"
                       FontSize="20" FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,0,0,10"/>

            <!-- Styled ListBox -->
            <ListBox x:Name="BookList"
                     Background="White"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     Padding="5"
                     Height="800"
                     SelectionChanged="BookList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="5" Padding="5" Margin="2" Background="#E0E0E0">
                            <TextBlock Text="{Binding Title}" FontSize="16" Foreground="Black"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- 📖 Book Details Section -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Book Details"
                       FontSize="20" FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="SelectedBookTitle"
                       FontSize="18" FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Book Cover -->
            <Image Name="BookCover"
                   Width="200" Height="300"
                   HorizontalAlignment="Center"
                   Stretch="Uniform"
                   Margin="0,0,0,10"/>

            <!-- Book URL -->
            <TextBlock Text="Book URL:"
                       FontSize="14" FontWeight="Bold"
                       Foreground="Black"/>
            <TextBlock x:Name="TextUrl"
                       FontSize="14" Foreground="Blue"
                       Cursor="Hand" TextDecorations="Underline"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       MouseLeftButtonUp="TextUrl_MouseLeftButtonUp"/>

            <!-- Book Description -->
            <RichTextBox x:Name="BookDetails"
                         Height="120"
                         Background="Transparent"
                         BorderBrush="Gray"
                         BorderThickness="0"
                         IsReadOnly="True"
                         Padding="5"
                         Margin="0,0,0,10"/>

            <!-- Download Button -->
            <Button Name="DownloadButton"
                Content="Download Book"
                Width="200" Height="45"
                Background="#2196F3"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="DownloadButton_Click"
                Margin="0,10,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="10"/>
                   
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Gray" BlurRadius="5"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#2196F3"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!-- Mouse Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <!-- Darker Blue -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                                <!-- Even Darker Blue -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</Window>
